<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">    
    <title>Document</title>
</head>
<body>
    <%- include("./partials/header.ejs") %>
    <h1>INICIÁ SESIÓN!</h1>
    <form action="/users/iniciosesion" id="register" method="post">
        <% if (locals.errores && errores.nombre) { %>
            <div class="errores">
              <%= errores.nombre.msg %>
            </div>
            <% } %>
        <div>
            <label for="nombre">Ingresá tu nombre de usuario</label>
        <input type="text" name="nombre" id="nombre">
        </div>
        <% if (locals.errores && errores.contraseña) { %>
            <div class="errores">
              <%= errores.contraseña.msg %>
            </div>
            <% } %>
        <div>
            <label for="contraseña">Ingresá tu contraseña</label>
            <input type="password" name="contraseña" id="contraseña">
        </div>
        <div class="buttons">
             <input type="submit" value="Iniciar sesion" class="btn">
             
        </div>
       
    </form>
    <%- include("./partials/footer.ejs") %>
</body>
</html>
