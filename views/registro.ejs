<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">    
</head>
<body>
    <%- include("./partials/header.ejs") %>
    <h1>REGISTRATE!</h1>
    <form action="/users/register" id="register" method="post">
        <% if (locals.errores && errores.nombre) { %>
            <div class="errores">
              <%= errores.nombre.msg %>
            </div>
            <% } %>
        <div>
            
            <label for="nombre">Nombre y apellido</label>
           
        <input type="text" name="nombre" id="nombre" value="<%= locals.oldData ? oldData.nombre : null%>" >
        </div>
        <% if (locals.errores && errores.email) { %>
            <div class="errores">
              <%= errores.email.msg %>
            </div>
            <% } %>
        <div>
            <label for="email">Ingresá tu email</label>
            <input type="email" name="email" id="email" value="<%= locals.oldData ? oldData.email : null%>">
        </div>
        <% if (locals.errores && errores.contraseña) { %>
            <div class="errores">
              <%= errores.contraseña.msg %>
            </div>
            <% } %>
        <div>
            <label for="contraseña">Ingresá tu contraseña</label>
            <input type="password" name="contraseña" id="contraseña">
        </div>
        <% if (locals.errores && errores.dni) { %>
            <div class="errores">
              <%= errores.dni.msg %>
            </div>
            <% } %>
               <div>
            <label for="dni">Ingresá tu DNI</label>
            <input type="text" name="dni" id="dni" value="<%= locals.oldData ? oldData.dni : null%>">
        </div>
        <% if (locals.errores && errores.domicilio) { %>
            <div class="errores">
              <%= errores.domicilio.msg %>
            </div>
            <% } %>
        <div>
            <label for="domicilio">Ingresá tu domicilio</label>
            <input type="text" name="domicilio" id="domicilio" value="<%= locals.oldData ? oldData.domicilio : null%>">
        </div>
        <% if (locals.errores && errores.telefono) { %>
            <div class="errores">
              <%= errores.telefono.msg %>
            </div>
            <% } %>
        <div>
            <label for="telefono">Ingresá tu número de celular</label>
            <input type="text" name="telefono" id="telefono"  value="<%= locals.oldData ? oldData.telefono : null%>">
        </div>
              <div class="buttons">
             <input type="submit" value="Registrarse" class="btn">
          <input type="reset" value="Resetear Datos" class="btn dlt">
        </div>
       
    </form>
    <%- include("./partials/footer.ejs") %>
</body>
</html>